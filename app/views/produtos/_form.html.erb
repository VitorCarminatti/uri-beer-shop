
<%= simple_form_for(@produto) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :descricao %>
    <%= f.input :quantidade %>
    <%= f.input :preco %>
    <%= f.input :produzido %>
    <%= f.input :imagem %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
