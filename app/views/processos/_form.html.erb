<div class="form-group">
  <%= simple_form_for @processo do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :nome, class: 'form-control'%>
      <%= f.input :descricao, class: 'form-control'%>
      <%= f.input :quantidade_produzida, class: 'form-control'%>
      <%= f.input :ingrediente_ids, collection: ingredientes_options_for_select, include_hidden: false, input_html: { multiple: true, id: 'select2' } %>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, status_processo_options_for_select, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="actions button-create">
      <%= f.submit "Salvar", class: 'btn custom-primary-btn btn-block' %>
    </div>
  <% end %>
</div>

<script>
  $("#dropdown").select2({
    theme: "bootstrap"
  });

  $("#select2").select2();
</script>
