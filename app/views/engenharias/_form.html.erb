<div class="form-group">
  <%= simple_form_for @engenharia do |form| %>
    <% if engenharia.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(engenharia.errors.count, "error") %> prohibited this engenharia from being saved:</h2>

        <ul>
        <% engenharia.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :descricao %>
      <%= form.text_field :descricao, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, [['pinto', '1'], ['pinto2', '2']], {}, class: 'form-control' %>
    </div>

    <div class="actions button-create">
      <%= form.submit "Salvar", class: 'btn custom-primary-btn btn-block' %>
    </div>
  <% end %>
</div>
