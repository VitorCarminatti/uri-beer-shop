<div class="form-group">
  <%= simple_form_for @engenharia do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :descricao, class: 'form-control' %>
    </div>

    <div class="actions button-create">
      <%= f.submit "Salvar", class: 'btn custom-primary-btn btn-block' %>
    </div>
  <% end %>
</div>

<script>
  $("#dropdown").select2({
    theme: "bootstrap"
  });

  $("#select2").select2();
</script>
