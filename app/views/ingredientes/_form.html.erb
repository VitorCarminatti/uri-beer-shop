<div class="form-group">
  <%= simple_form_for @ingrediente do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :nome, class: 'form-control' %>
      <%= f.input :descricao, class: 'form-control' %>
      <%= f.input :quantidade, class: 'form-control' %>
      <%= f.input :quantidade_consumo, class: 'form-control' %>
    </div>

    <div class="actions button-create">
      <%= f.submit "Salvar", class: 'btn custom-primary-btn btn-block' %>
    </div>
  <% end %>
</div>
