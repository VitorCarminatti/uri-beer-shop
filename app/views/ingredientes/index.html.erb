<div class="ingredientes-content">
  <% if notice %>
    <div class="alert alert-primary">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <h1 class="title">Ingredientes</h1>

  <%= search_form_for @q do |f| %>
    <%= f.search_field :nome_or_descricao_cont, class: 'form-control' %>
    <%= f.submit %>
  <% end %>

  <table class="table">
    <thead class="header-table">
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Quantidade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ingredientes.each do |ingrediente| %>
        <tr>
          <td><%= ingrediente.nome %></td>
          <td><%= ingrediente.descricao %></td>
          <td><%= ingrediente.quantidade %></td>
          <td class="success"><%= link_to 'Visualizar', ingrediente %></td>
          <td class="warning"><%= link_to 'Editar', edit_ingrediente_path(ingrediente) %></td>
          <td class="error"><%= link_to 'Excluir', ingrediente, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @processos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

  <br>

  <%= link_to 'Novo ingrediente', new_ingrediente_path, class: 'btn custom-primary-btn' %>
</div>
