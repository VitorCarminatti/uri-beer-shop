<div class="content">
  <div class="login-wrapper">
    <h2>Alterar sua senha</h2>

    <div class="form-group">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.password_field :password, placeholder: 'Senha', autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: 'Confirmar senha', autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Alterar minha senha", class: 'btn btn-login btn-block' %>
        </div>
      <% end %>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
